<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <logger name="com.samsolution.demo.validation" level="debug" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>


    <appender name="FILE-HIBERNATE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>log/hibernate-test.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                ${FILE_LOG_PATTERN}
            </pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>log/hibernate-test.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
        <appender-ref ref="FILE-HIBERNATE"/>
    </logger>

    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
        <appender-ref ref="FILE-HIBERNATE"/>
    </logger>




    <appender name="FILE-SPRING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>log/spring-test.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                ${FILE_LOG_PATTERN}
            </pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>log/spring-test.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>5</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="org.springframework.test.context.cache" level="DEBUG" additivity="false">
        <appender-ref ref="FILE-SPRING"/>
    </logger>

    <!--TestContainer-->
<!--    <logger name="org.testcontainers" level="DEBUG"/>-->

    <logger name="org.apache.http" level="WARN"/>
    <logger name="com.github.dockerjava" level="WARN"/>
    <logger name="org.zeroturnaround.exec" level="WARN"/>
    <logger name="io.netty" level="WARN" />
    <logger name="org.testcontainers.shaded" level="WARN"/>

</configuration>